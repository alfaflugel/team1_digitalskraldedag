---
import Button from '../components/Button.astro';
---


<section class="bg-lightpink px-10 md:px-0"> 


<h1 class="font-bold font-poppins text-center text-darkblue text-4xl md:text-5xl md:pt-24 pt-5 md:pb-12 pb-5 ">
  Regsistrer din digitale oprydning
</h1>
<div class="max-w-md mx-auto pb-36">
  <form class="bg-lightblue shadow-md rounded px-8 pt-6  max-w-xl">
    <div class="mb-4 ">
      <label class="block text-wine  font-poppins text-sm font-bold mb-2" for="fornavn">
        Fornavn
      </label>
      <input
        class=" border-wine shadow appearance-none border text-pink  rounded-lg w-full py-2 px-3  placeholder-wine placeholder-opacity-80 leading-tight focus:outline-none focus:ring focus:ring-wine focus:shadow-outline"
        id="fornavn"
        type="text"
        placeholder="Indtast fornavn"
      />
    </div>
    <div class="mb-4">
      <label class="block text-wine font-poppins  text-sm font-bold mb-2" for="efternavn">
        Efternavn
      </label>
      <input
        class="border-wine shadow appearance-none border rounded-lg w-full py-2 px-3 text-pink leading-tight  placeholder-wine placeholder-opacity-80 focus:outline-none focus:ring focus:ring-wine focus:shadow-outline"
        id="efternavn"
        type="text"
        placeholder="Indtast efternavn"
      />
    </div>
    <div class="mb-4">
      <label class="block text-wine font-poppins text-sm font-bold mb-2" for="email">
        Email
      </label>
      <input
        class="border-wine shadow appearance-none border rounded-lg w-full py-2 px-3 text-pink  placeholder-wine placeholder-opacity-80 leading-tight focus:outline-none focus:ring focus:ring-wine focus:shadow-outline"
        id="email"
        type="email"
        placeholder="Indtast email "
      />
    </div>
    <div class="mb-4">
      <label class="block text-wine font-poppins text-sm font-bold mb-2" for="land">
        Land
      </label>
      <input
        class=" border-wine shadow appearance-none border rounded-lg w-full py-2 px-3  text-pink  placeholder-wine placeholder-opacity-80  leading-tight focus:outline-none focus:ring focus:ring-wine focus:shadow-outline"
        id="land"
        type="text"
        placeholder="Indtast land"
      />
    </div>
    <div class="mb-4">
        <label class="block text-wine font-poppins text-sm font-bold mb-2" for="Slettet GB">
          Land
        </label>
        <input
          class=" border-wine shadow appearance-none border rounded-lg w-full py-2 px-3  text-pink  placeholder-wine placeholder-opacity-80  leading-tight focus:outline-none focus:ring focus:ring-wine focus:shadow-outline"
          id="GB"
          type="text"
          placeholder="Indtast mængde slettet GB"
        />
      </div>
    <div class="mb-4">
      <label class="block text-wine font-poppins text-sm font-bold mb-2" for="deltagere">
        Antal deltagere
      </label> <!-- Kan ikke få teksten lyserød, og selve pile sat chekbokse er grå per deafult, vi kan bruge sperart css? -->
      <input 
        class="  border-wine shadow appearance-none border rounded-lg w-full py-2 px-3  leading-tight focus:outline-none focus:ring focus:ring-wine focus:shadow-outline "
        id="deltagere"
        type="number"
        placeholder="Indtast antal deltagere"
      />
    </div>
    <div class="mb-4">
      <div class="flex items-center">
        <input
          type="checkbox"
          class="form-checkbox rounded-full h-5 w-5 text-wine "
          id="accepter"
          name="accepter"
        />
        <label class="ml-2 text-wine  text-sm font-bold font-poppins focus:ring"  for="accepter">
          Jeg accepterer vilkår og betingelser
        </label>
      </div>
    </div>
    <div class="mb-4">
      <div class="flex items-center">
        <input
          type="checkbox"
          class="form-checkbox h-5 w-5 text-pink"
          id="nyhedsbrev"
          name="nyhedsbrev"
        />
        <label class="ml-2 text-wine text-sm font-bold font-poppins"  for="nyhedsbrev">
          Tilmeld mig nyhedsbrev
        </label>
    
      </div>
    </div>
    <div class="flex justify-end p-5"> 
      <a href="#forms"><Button variant="primary" size="medium">Tilmeld</Button></a>
    </div>
     
    </div>
  </form>

</div>


<div>

  <form class="grid grid-cols-3">

    <p >Mit navn er</p> 
    <div>
     <input
        class=" border-none bg-lightpink appearance-none text-pink  rounded-lg w-full py-2 px-3  placeholder-wine placeholder-opacity-80 leading-tight focus:outline-none focus:ring focus:ring-wine focus:shadow-outline"
        id="fornavn"
        type="text"
        placeholder="fornavn"
      />
      </div>
      <div>
    <input
        class="border-none bg-lightpink appearance-none border rounded-lg w-full py-2 px-3 text-pink leading-tight  placeholder-wine placeholder-opacity-80 focus:outline-none focus:ring focus:ring-wine focus:shadow-outline"
        id="efternavn"
        type="text"
        placeholder="efternavn"
      />
      </div>
  </form>
</div>
</section>



